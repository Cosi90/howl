#! /bin/sh

ROOT=$(cd $(dirname $0)/.. && pwd)
for lunar in $ROOT/bin/lunar $ROOT/src/lunar; do
  if [ -e $lunar ]; then
    LUNAR=$lunar
    break
  fi
done

if [ -z "$LUNAR" ]; then
  echo "Could not locate lunar executable"
  exit 1
fi

export BUSTED='yes'
#echo busted -l $LUNAR --pattern=_spec.moon $*
exec busted -l $LUNAR --pattern=_spec.moon $*
