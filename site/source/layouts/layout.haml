          %li
            %a(href="/doc/") Documentation
          %li
            %a(href="/contact.html") Contact

      = preserve yield

      .footer.text-muted
        %a(href="/")
          = image_tag "howl.png", width: "50", height: "50", class: 'footer-logo'
        .footer-blurb
          %div The Howl editor.
          %div Copyright 2013 Nils Nordman &lt;nino at nordman.org&gt;


